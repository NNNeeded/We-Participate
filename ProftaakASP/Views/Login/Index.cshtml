@model ProftaakASP.Models.Account

@{
    ViewBag.Title = "Login";
}

<head>
    <link rel="stylesheet" type="text/css" href="~/Content/style.css">
    <meta charset="UTF-8">
</head>

@using (Html.BeginForm("Login", "Login"))
{


    <div class="container">
        <div class="row" style="margin-top:20px">
            <!-- <p class="txtTitleBox" style="padding-top: 10px; min-width: 50px;">Welkom bij WeParticipate!</p> -->
            <img src="~/Content/Images/Logo_Transparent.png" style="width:50%;margin-left:25%;margin-right:25%;">
            <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
                <form role="form">
                    <fieldset>
                        <p class="txtRedSmall">Om verder te gaan verzoeken wij u vriendelijk om eerst in te loggen</p>
                        <hr class="colorgraph">
                        <div class="form-group">
                            <input type="text" name="username" id="username" class="form-control input-lg" placeholder="Gebruikersnaam" style="margin-left: 25%; width: 50%;">
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Wachtwoord" style="margin-left: 25%; width: 50%;">
                        </div>
                        <hr class="colorgraph">
                        <div style="margin-left:24%;">
                            <input type="submit" class="btn btn-lg btn-success btn-block" value="Log in" style="color: white; background-color: #d80027;"/>
                        </div>
                        <div style="text-align:center; margin-top: 15px;">
                            @Html.ActionLink("Maak een nieuw account aan", "Create", "Account")
                        </div>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>

}